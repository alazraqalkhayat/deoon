<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditInternalPassActivity"

    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/edit_internal_pass_activity_linear_layout"
        >

        <LinearLayout
            style="@style/all_edit_text__linear_layout_style"
            android:id="@+id/edit_internal_pass_activity_last_password_linear_layout"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"



                >


                <ImageView
                    style="@style/all_edit_text_image_view_style"
                    android:src="@drawable/password_svg"
                    android:layout_weight="7"
                    android:background="@drawable/new_shape_of_edit_text_image_view"
                    />

                <EditText
                    android:id="@+id/edit_internal_pass_activity_last_password_edit_text"
                    style="@style/all_edit_text_style"
                    android:hint=" ـــــــــــــــــ كلمة المرور القديمه ـــــــــــــــــ"
                    android:background="@drawable/new_shape_of_edit_text"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    />

            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            style="@style/all_edit_text__linear_layout_style"
            android:id="@+id/edit_internal_pass_activity_password_linear_layout"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"

                >


                <ImageView
                    style="@style/all_edit_text_image_view_style"
                    android:src="@drawable/lock2"
                    android:layout_weight="7"
                    android:background="@drawable/new_shape_of_edit_text_image_view"
                    />

                <EditText
                    android:id="@+id/edit_internal_pass_activity_password_edit_text"
                    style="@style/all_edit_text_style"
                    android:hint=" ـــــــــــــــــ كلمة المرور الجديده ـــــــــــــــــ"
                    android:background="@drawable/new_shape_of_edit_text"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    />

            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            style="@style/all_edit_text__linear_layout_style"
            android:id="@+id/edit_internal_pass_activity_confirm_password_linear_layout"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"



                >


                <ImageView
                    style="@style/all_edit_text_image_view_style"
                    android:src="@drawable/lock2"
                    android:layout_weight="7"
                    android:background="@drawable/new_shape_of_edit_text_image_view"
                    />

                <EditText
                    android:id="@+id/edit_internal_pass_activity_confirm_password_edit_text"
                    style="@style/all_edit_text_style"
                    android:hint=" ـــــــــــــــــ تأكيد كلمة المرور الجديده ـــــــــــــــــ"
                    android:background="@drawable/new_shape_of_edit_text"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    />

            </LinearLayout>






        </LinearLayout>








    </LinearLayout>

    <ImageView
        style="@style/all_image_views_like_buttons"
        android:background="@drawable/new_shape_of_buttons"
        android:src="@drawable/true_icon"
        android:id="@+id/edit_internal_pass_activity_edit_image_view"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />




    <TextView
        android:id="@+id/edit_internal_pass_activity_forgate_pass_text_view"
        style="@style/edit_internal_passwoird_activity_forgate_passwordtext_view"

        />
</LinearLayout>